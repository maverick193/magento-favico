<config>
    <global>
        <blocks>
            <cecropia_favico>
                <class>Cecropia_Favico_Block</class>
            </cecropia_favico>
        </blocks>
        <helpers>
            <cecropia_favico>
                <class>Cecropia_Favico_Helper</class>
            </cecropia_favico>
        </helpers>
        <models>
            <cecropia_favico>
                <class>Cecropia_Favico_Model</class>
            </cecropia_favico>
        </models>
    </global>
    <frontend>
        <layout>
            <updates>
                <cecropia_favico>
                    <file>cecropia/favico.xml</file>
                </cecropia_favico>
            </updates>
        </layout>
    </frontend>
    <default>
        <favico>
            <general>
                <enabled>1</enabled>
                <bg_color>DD0000</bg_color>
                <text_color>FFFFFF</text_color>
                <font_style>bold</font_style>
                <type>circle</type>
                <position>down</position>
                <animation_enabled>1</animation_enabled>
                <animation>slide</animation>
            </general>
        </favico>
    </default>
</config>